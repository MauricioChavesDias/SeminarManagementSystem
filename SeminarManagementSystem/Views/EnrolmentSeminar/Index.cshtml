@model IEnumerable<SeminarManagementSystem.Models.EnrolmentSeminar>

@{
    ViewData["Title"] = "Enrolment";
 }
<div class="container">
    <div class="card">
        <div class="card-body">

            <div class="row card-header align-card">
                <img src="@Url.Content("~/Image/icons/enrolment_icon.png")" width="60" height="60">
                <h1 class="header-title">Enrolment</h1>
            </div>

            <table id="grid" class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.seminar)
                        </th>

                        @*<th scope="col">
                            @Html.DisplayNameFor(model => model.seminar.organiser)
                        </th>*@

                        <th scope="col">
                            @Html.DisplayNameFor(model => model.attendee)
                        </th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.seminar.seminar_title)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.seminar.organiserID)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.attendee.attendee_name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.enrolmentSeminarID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.enrolmentSeminarID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.enrolmentSeminarID">Delete</a>
                        </td>
                    </tr>}
                </tbody>
            </table>
            <div class="container d-flex flex-column col-md-8" id="create-button">

                <div class="row flex-column">
                    <button type="button"
                            class="col-4 align-self-end btn btn-primary btn-lg"
                            value="Create"
                            onclick="location.href='@Url.Action("Create", "EnrolmentSeminar")'">
                        <img src="@Url.Content("~/Image/new_icon.png")" width="25" height="25">
                        New Enrolment
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
