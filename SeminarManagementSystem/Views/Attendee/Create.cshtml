@model SeminarManagementSystem.Models.Attendee

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="card">
        <h1 class="card-header">Create</h1>
        <div class="card-body">
            <h4>Attendee</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="attendee_name" class="control-label"></label>
                    <input asp-for="attendee_name" class="form-control" />
                    <span asp-validation-for="attendee_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="attendee_DOB" class="control-label" id="laberu"></label>
                    <input asp-for="attendee_DOB" class="form-control" />
                    <span asp-validation-for="attendee_DOB" class="text-danger"></span>
                </div>
                <div class="form-group container d-flex flex-column">
                    <div class="row">
                        <a asp-action="Index" class="btn btn-link col col-lg-2 align-self-auto mt-2">Back to List</a>
                        <div class="col">
                        </div>
                        <input type="submit" value="Create" class="align-bottom col col-lg-2 align-self-end btn btn-primary btn-lg" style="width:50px;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

