@model IEnumerable<SeminarManagementSystem.Models.Attendee>

@{
    ViewData["Title"] = "Attendee";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row card-header align-card">
                <img src="@Url.Content("~/Image/icons/attendee_icon.png")" width="60" height="60">
                <h1 class="header-title">Attendee</h1>
            </div>
            <table id="grid" class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.attendee_name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.attendee_DOB)
                        </th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.attendee_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.attendee_DOB)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.attendeeID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.attendeeID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.attendeeID">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="container d-flex flex-column col-md-8" id="create-button">

                <div class="row flex-column">
                    <button type="button"
                            class="col-4 align-self-end btn btn-primary btn-lg"
                            value="Create"
                            onclick="location.href='@Url.Action("Create", "Attendee")'">
                        <img src="@Url.Content("~/Image/new_icon.png")" width="25" height="25">
                        New Attendee
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
