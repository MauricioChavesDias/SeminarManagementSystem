<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <nav class="navbar navbar-light bg-light">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/Image/image-removebg-preview.png")" width="130" height="50" class="d-inline-block align-top" alt="">
                </a>

                @*<a class="nav-link text-white" id="ttl" asp-area="" asp-controller="Home" asp-action="Index">

                    <div class="row">
                        <img src="@Url.Content("~/Image/icons/home_icon.png")" width="25" height="25">
                        <h5>
                            Home
                        </h5>
                    </div>
                </a>*@


            </nav>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse ml-5" id="navbarNavDropdown">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link text-white" id="button-home" asp-area="" asp-controller="Home" asp-action="Index">

                            <div class="box">
                                <img style="vertical-align:middle" src="@Url.Content("~/Image/icons/home_icon.png")" width="25" height="25" >
                                <span style="">Home</span>
                            </div>

                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="Organiser" asp-action="Index">Organiser</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="Attendee" asp-action="Index">Attendee</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="TypeSeminar" asp-action="Index">Seminar Type</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="Seminar" asp-action="Index">Seminar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="EnrolmentSeminar" asp-action="Index">Enrolment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="button-na" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2022 KOI Students - All Rights Reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
